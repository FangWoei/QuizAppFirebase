<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.dashboard.addEdit.base.BaseAddEditFragment">

    <TextView
        android:id="@+id/etChangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xxl"
        android:textStyle="bold"
        android:text="Add Quiz" />

    <EditText
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l"
        android:hint="@string/title"
        android:layout_marginHorizontal="@dimen/l"
        android:paddingStart="@dimen/s"
        android:background="@drawable/input_bg"/>

    <EditText
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l"
        android:hint="@string/desc"
        android:layout_marginHorizontal="@dimen/l"
        android:paddingStart="@dimen/s"
        android:background="@drawable/input_bg"/>


    <EditText
        android:id="@+id/tvQuizId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quiz Id"
        android:layout_marginTop="@dimen/l"
        android:layout_marginHorizontal="@dimen/l"
        android:inputType="number"
        android:paddingStart="@dimen/s"
        android:background="@drawable/input_bg"/>

    <EditText
        android:id="@+id/tvTimeLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time Limit (seconds)"
        android:layout_marginTop="@dimen/l"
        android:layout_marginHorizontal="@dimen/l"
        android:inputType="number"
        android:paddingStart="@dimen/s"
        android:background="@drawable/input_bg"/>

<LinearLayout
    android:id="@+id/uploadCsvPart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/l"
    android:gravity="center"
    android:visibility="gone"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadCsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload CSV"
        android:layout_marginTop="@dimen/l"/>

    <TextView
        android:id="@+id/tvSelectedFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s"
        android:text="No file selected"
        android:textStyle="italic"/>
</LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginTop="@dimen/xxl"
    />

</LinearLayout>
</layout>
